
- name: Generating token on master node and token deployment to worker node
  hosts: all
  gather_facts: false
  tasks:
    - name: get join command
      shell: kubeadm token create --print-join-command
      register: join_command_raw
      when: "'masters' in group_names"

    - name: set join command
      set_fact:
        #join_command: "{{ join_command_raw.stdout_lines[0] }}"
        join_command: "{{ join_command_raw.stdout }}"
      when: "'masters' in group_names"

    - name: join cluster
      become: true
      #shell: "{{ hostvars['master'].join_command }} --ignore-preflight-errors all  >> node_joined.txt"
      shell: "{{ hostvars[groups['masters'][0]].join_command }} --ignore-preflight-errors=NumCPU,Mem,Swap,FileExisting-conntrack >> node_joined.txt"
      args:
        chdir: $HOME
        creates: node_joined.txt
      when: "'workers' in group_names"
